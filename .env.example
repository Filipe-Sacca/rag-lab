# ============================================
# RAG Lab - Environment Variables
# ============================================

# --------------------------------------------
# Google AI (Gemini + Embeddings)
# --------------------------------------------
# Obtenha em: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# --------------------------------------------
# Pinecone (Vector Database)
# --------------------------------------------
# Obtenha em: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=rag-lab

# Configuração do índice
PINECONE_DIMENSION=768
PINECONE_METRIC=cosine

# --------------------------------------------
# Cohere (Reranking)
# --------------------------------------------
# Obtenha em: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your-cohere-api-key-here

# --------------------------------------------
# Neo4j (Graph RAG - Opcional)
# --------------------------------------------
# Necessário apenas para Graph RAG
# Obtenha em: https://console.neo4j.io/
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password

# --------------------------------------------
# Backend Configuration
# --------------------------------------------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
ENVIRONMENT=development

# CORS - Permitir frontend
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# --------------------------------------------
# LLM Configuration
# --------------------------------------------
# Gemini 2.5 Flash
LLM_MODEL=gemini-2.5-flash
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500

# Embeddings
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSION=768

# Reranking
RERANK_MODEL=rerank-english-v3.0
RERANK_TOP_N=5

# --------------------------------------------
# RAG Configuration
# --------------------------------------------
# Retrieval
DEFAULT_TOP_K=5
MAX_TOP_K=20

# Chunk settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# --------------------------------------------
# RAGAS Evaluation
# --------------------------------------------
# LLM para avaliação (pode ser diferente do LLM principal)
RAGAS_LLM_MODEL=gemini-2.5-flash
RAGAS_EMBEDDINGS_MODEL=text-embedding-004

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# --------------------------------------------
# Frontend (para referência)
# --------------------------------------------
# Estas variáveis devem estar em frontend/chat-lab/.env
# VITE_API_URL=http://localhost:8000

# --------------------------------------------
# Development/Production
# --------------------------------------------
# Altere para 'production' em deploy
DEBUG=true

# --------------------------------------------
# Optional: Analytics & Monitoring
# --------------------------------------------
# SENTRY_DSN=your-sentry-dsn
# DATADOG_API_KEY=your-datadog-key

# --------------------------------------------
# Cost Control (opcional)
# --------------------------------------------
# Alertas de custo
MAX_COST_PER_DAY_USD=10.00
ALERT_EMAIL=your-email@example.com
